<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/gray">
    <androidx.cardview.widget.CardView
        android:id="@+id/temp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="1.0"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTRACT RECEIPT"
                android:textAlignment="center"
                android:fontFamily="@font/receipt"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="HASH VALUE"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/receipt"
                    android:layout_weight="2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/hash_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0237-7746-1930-2338"
                    android:layout_weight="2"
                    android:fontFamily="@font/receipt"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textAlignment="gravity"/>
            </LinearLayout>

            <include
                layout="@layout/horizontal_bar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="INFLUENCER"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/receipt"
                    android:layout_weight="2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/influencer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="IPSUM LOREM"
                    android:layout_weight="2"
                    android:fontFamily="@font/receipt"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textAlignment="gravity"/>
            </LinearLayout>

            <include
                layout="@layout/horizontal_bar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CONTRACTOR"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/receipt"
                    android:layout_weight="2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/contractor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="JAMES DEEN"
                    android:layout_weight="2"
                    android:fontFamily="@font/receipt"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textAlignment="gravity"/>
            </LinearLayout>

            <include
                layout="@layout/horizontal_bar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGNATURE"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/receipt" />

                <ImageView
                    android:id="@+id/signature_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/sign"
                    android:adjustViewBounds="true"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>