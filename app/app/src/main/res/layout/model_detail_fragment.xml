<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/top_bar"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.075"
        layout="@layout/top_bar" />

    <include
        android:id="@+id/model_profile_view"
        layout="@layout/model_detail_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintWidth_percent="1.0"
        tools:layout_editor_absoluteX="0dp"/>

    <include
        android:id="@+id/model_follow_contract_btn_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/model_profile_view"
        app:layout_constraintHeight_percent="0.15"
        layout="@layout/two_button_bar"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/model_profile_tab_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintTop_toBottomOf="@id/model_follow_contract_btn_bar"
        app:tabTextColor="@color/gray"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabTextAppearance="@style/tabTextStyle">
        <com.google.android.material.tabs.TabItem
            android:id="@+id/model_profile_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PROFILE" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/model_video_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="VIDEO" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/model_extra_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EXTRA" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toBottomOf="@id/model_profile_tab_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>