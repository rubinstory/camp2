<resources>
    <style name="fontFamily">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ModelProfileView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ModelProfileValueView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>

        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintVertical_bias">0.5</item>
        <item name="layout_constraintWidth_percent">0.33333</item>
    </style>

    <style name="ModelProfileValueTextView" parent="@style/fontFamily">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/model_detail_profile_value_color</item>
    </style>

    <style name="ModelProfileNameTextView" parent="@style/fontFamily">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/model_detail_profile_value_color</item>
    </style>

    <style name="ModelProfileValueDescriptionView" parent="@style/fontFamily">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/model_detail_profile_description_color</item>
    </style>

    <style name="ModelProfileImgCardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="layout_constraintVertical_bias">0.5</item>
        <item name="layout_constraintWidth_percent">0.33333</item>
    </style>

    <style name="inputTextView">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="helperTextTextColor">@color/gray</item>
        <item name="errorTextColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="searchTextView">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="errorTextColor">@color/burgundy</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/black</item>
    </style>

</resources>